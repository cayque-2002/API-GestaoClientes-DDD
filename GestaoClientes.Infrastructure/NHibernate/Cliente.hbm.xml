<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
 
  <class name="GestaoClientes.Domain.Entidades.Cliente, GestaoClientes.Domain" table="Clientes">
    <id name="Id" column="Id" type="Guid">
      <generator class="guid.comb" />
    </id>

    <property name="NomeFantasia" column="NomeFantasia" not-null="true" />

    <!-- Pelo Cnpj ser um VO, defini ele como componente -->
    <component name="Cnpj" class="GestaoClientes.Domain.ValueObjetcs.Cnpj, GestaoClientes.Domain">
      <property name="Valor" column="Cnpj" not-null="true" />
    </component>

    <property name="Ativo" column="Ativo" not-null="true" />
  </class>
</hibernate-mapping>
